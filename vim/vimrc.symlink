\                },
\ 'pencil_lite' :{ 'colorscheme': 'pencil',
\                  'background': 'light',
\                  'ruler': 1,
\                  'typeface': 'Source Code Pro Light',
\                  'fullscreen': 0,
\                  'transparency': 0,
\                  'linespace': 6,
\                },
\ }

